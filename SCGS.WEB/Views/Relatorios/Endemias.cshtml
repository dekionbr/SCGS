@{
    ViewBag.Title = "Endemias";
    var unidades = ViewData["unidades"] as List<Unidade>;
    var equipes = ViewData["equipes"] as List<Equipe>;
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">
            Relatório de Consultas
        </h1>
        <ol class="breadcrumb">
            <li>
                <i class="fa fa-dashboard"></i>Dashboard
            </li>
            <li>
                <i class="fa fa-bar-chart-o"></i>Relatorios
            </li>
            <li class="active">
                <i class="fa fa-comments"></i>Endemias
            </li>
        </ol>
    </div>
</div>


<form role="form">
 
        <div class="row">
            @if (unidades.Count > 0)
            {
                <div class="col-lg-3">
                    <select class="form-control ui-auto-unidade" id="unidade">
                        <option value="">Selecione uma Unidade</option>

                        @foreach (var row in unidades)
                {
                            <option value="@row.Id">@row.Nome</option>
                        }
                    </select>
                </div>
            }

            @if (equipes.Count > 0)
            {
                <div class="col-lg-3">
                    <select class="form-control ui-auto-unidade" id="equipe">

                        <option value="">Selecione a Equipe</option>

                        @foreach (var row in equipes)
                {
                            <option value="@row.Id">@row.Nome</option>

                        }
                    </select>
                </div>
            }

            <div class="col-lg-2">
                <input type="text" class="form-control date" placeholder="Data Inicial" id="dtini" />
            </div>

            <div class="col-lg-2 form-group">
                <input type="text" class="form-control date" placeholder="Data Final" id="dtfim" />
            </div>

            <div class="col-lg-2 form-group">
                <select class="form-control ui-autocomplete" id="corte" required>
                    <option value="">Corte</option>
                    <option value="0">Semanal</option>
                    <option value="1">Mensal</option>
                    <option value="2">Semestral</option>
                    <option value="3">Anual</option>
                </select>
            </div>

        </div>

        <div class="row">
            <div class="col-lg-1 col-lg-offset-11">
                <input id="submit" type="button" class="btn btn-primary col-lg-12" value="Visualizar" />
            </div>
        </div>
</form>
<br />

<div id="rel_consultas" style="height: 100%;">
</div>

@section scripts{

    @Scripts.Render("~/bundles/datepicker")
    @Scripts.Render("~/bundles/morris")
    @Scripts.Render("~/Scripts/Chart.min.js")

    @Scripts.Render("~/Script/Relatorios/Endemias");

}